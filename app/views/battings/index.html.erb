<p id="notice"><%= notice %></p>

<h1>Battings</h1>
<h3><%= "The number of records is: #{@battings.length}" %></h3>
<h3><%= "The max number of home runs is: #{@max_hr}" %></h3>
<h3><%= "The max number of rbi's is: #{@max_rbi}" %></h3>
<h3><%= "The highest batting average is: #{@max_ba}" %></h3>
<table>
  <thead>
    <tr>
      <th>Player</th>
      <th>Year</th>
      <th>League</th>
      <th>Team</th>
      <th>G</th>
      <th>At bats</th>
      <th>R</th>
      <th>Hits</th>
      <th>Doubles</th>
      <th>Triples</th>
      <th>Home runs</th>
      <th>Rbi</th>
      <th>Sb</th>
      <th>CS</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @battings.each do |batting| %>
      <tr>
        <td><%= batting.player_id  %></td>
        <td><%= batting.year %></td>
        <td><%= batting.league %></td>
        <td><%= batting.team %></td>
        <td><%= batting.G %></td>
        <td><%= batting.at_bats %></td>
        <td><%= batting.R %></td>
        <td><%= batting.hits %></td>
        <td><%= batting.doubles %></td>
        <td><%= batting.triples %></td>
        <td><%= batting.home_runs %></td>
        <td><%= batting.rbi %></td>
        <td><%= batting.SB %></td>
        <td><%= batting.CS %></td>
        <td><%= link_to 'Show', batting %></td>
        <td><%= link_to 'Edit', edit_batting_path(batting) %></td>
        <td><%= link_to 'Destroy', batting, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

